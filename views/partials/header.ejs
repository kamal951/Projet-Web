  </head>
  <body>
        <div class="header-blue">
            <nav class="navbar navbar-default">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                        <a class="navbar-brand" href="/">MonBonAppart</a>
                    </div>
                    <div id="navbar" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                        <li  ><a href="/annonces">Accueil</a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <% if(!currentUser){ %>
                                <li><a class="navbar-link login" href="/login">Connexion</a></li>
                                <li><a class="btn btn-default action-button" role="button" href="/register" style="margin-top:10px;">Inscription</a></li>
                            <% } else { %>
                                <li><a href="#">Connecté à <%= currentUser.username %></a></li>
                                <li><a href="/logout">Se déconnecter</a></li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </nav>
            
            <div class="container">
                <% if(error && error.length > 0) { %>
                <div class="alert alert-danger"><p><%=error %></p></div>
                <% } %>
                
                <% if(success && success.length > 0) { %>
                <div class="alert alert-success"><p><%= success %></p></div>
                <% } %>
            </div>
